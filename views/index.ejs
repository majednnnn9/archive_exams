                repeating-linear-gradient(45deg, #4a90e2 0%, #4a90e2 10%, transparent 10%, transparent 20%);
            color: white;
            border: none;
            border-radius: 5px;
            padding: 15px;
            /* يمكنك تعديل القيم حسب الحاجة */
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin: 20px 0;
            /* هوامش خارجية */
            width: 100%;
            /* عرض كامل */
            display: block;
            /* لجعله وسط الصفحة */
        }

