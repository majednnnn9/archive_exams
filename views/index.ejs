<body>
    <div class="container">
        <h1>اسئلة السنوات السابقة</h1>

        <div class="form-group">
            <select id="courseSelect" name="courseSelect" required>
                <option value="">اختر القسم</option>
                <%specialization.forEach(function(course) {%>
                    <option value="<%=course.id%>">
                        <%=course.name_ar%>
                    </option>
                    <%});%>
            </select>

            <select id="sortSelect" name="sortSelect">
                <option value="">ترتيب</option>
                <option value="nameAsc">أ-ي</option>
                <option value="nameDesc">ي-أ</option>
                <option value="dateAsc">الأقدم</option>
                <option value="dateDesc">الأحدث</option>
            </select>
        </div>
    
        <div class="template-grid">
            <% result.forEach(function(item) { %>
                <div class="template-item" onclick="goToViewExams('<%= item.id %>')">
                    <h3>
                        <%= item.name_ar %>
                    </h3>
                </div>
                <% }); %>
        </div>
    </div>

    <script>
        function goToViewExams(itemId) {
            window.location.href = '/view-exams?id=' + itemId;
        }
    </script>
